@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views.Tenant
@inherits EditClassificationSystems

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <div class="form-horizontal">
    @Html.HiddenFor(m => m.TenantID)
   
    <div class="row">
        <div class="col-md-12">            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>@Html.LabelWithSugarFor(FieldDefinitionEnum.ClassificationSystemName.ToType())</th>
                        <th>@Html.Label("Definition")</th>
                        <th>@Html.LabelWithSugarFor(FieldDefinitionEnum.IsClassificationSystemRequired.ToType(), "Required?")</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.ClassificationSystemSimples.Count; i++)
                    {
                        <tr>
                            <td style="width: 200px">
                                <input type="text" style="display: inline;" name="@Html.NameFor(m => m.ClassificationSystemSimples[i].ClassificationSystemName)" class="form-control" value="@Model.ClassificationSystemSimples[i].ClassificationSystemName" />
                                @Html.HiddenFor(m => m.ClassificationSystemSimples[i].ClassificationSystemID)
                                @Html.HiddenFor(m => m.ClassificationSystemSimples[i].CanDelete)
                            </td>
                            <td>@Html.TinyMCEEditorFor(m => m.ClassificationSystemSimples[i].ClassificationSystemDefinition, TinyMCEExtension.TinyMCEToolbarStyle.Minimal, true, false, 150)</td>
                            <td>@Html.CheckBoxFor(m => m.ClassificationSystemSimples[i].IsRequired)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}


