@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.TaxonomyBranch.Edit

<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyBranchName)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.TaxonomyBranchName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TaxonomyBranchName)
            </div>
        </div>
        @if (ViewDataTyped.IsTaxonomyLevelTrunk)
        {
            <div class="form-group">
                <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTrunkID)</div>
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.TaxonomyTrunkID, ViewDataTyped.TaxonomyTrunks, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TaxonomyTrunkID)
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyBranchDescription)</div>
            <div class="col-sm-9">
                @Html.CkEditorFor(m => m.TaxonomyBranchDescription, CkEditorExtension.CkEditorToolbar.Minimal, true, true, 300)
                @Html.ValidationMessageFor(m => m.TaxonomyBranchDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(x => x.ThemeColor)
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.ThemeColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.ThemeColor)
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.TaxonomyBranchID)
}

<script type="text/javascript">
    jQuery(document).ready(function () { jQuery("#themeColorPicker").colorpicker({ format: 'hex' }); });
</script>
<script type="text/javascript" src="/ScriptsCustom/CkEditorReady.js"></script>
