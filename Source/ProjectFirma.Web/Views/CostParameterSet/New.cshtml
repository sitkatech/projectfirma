@using ProjectFirma.Web.Models
@using LtInfo.Common.HtmlHelperExtensions

@inherits ProjectFirma.Web.Views.CostParameterSet.New

@using (Html.BeginForm())
{
    <table class="dialogFormLayout">
        <tr>
             <th>
                @Html.LabelWithSugarFor(FieldDefinition.GlobalInflationRate):
            </th>
            <td>
                @Html.EditorFor(p => p.InflationRate)
                @Html.ValidationMessageFor(p => p.InflationRate)
            </td>
        </tr>
        <tr>
             <th>
                @Html.LabelWithSugarFor(FieldDefinition.CurrentYearForPVCalculations):
            </th>
            <td>
                @Html.EditorFor(p => p.CurrentYearForPVCalculations)
                @Html.ValidationMessageFor(p => p.CurrentYearForPVCalculations)
            </td>
        </tr>
        <tr>
             <th>
                Comment:
            </th>
            <td>
                @Html.TextAreaWithMaxLengthFor(p => p.Comment, new TextAreaForExtensions.TextAreaDimensions(null, 6), null)
                @Html.ValidationMessageFor(p => p.Comment)
            </td>
        </tr>
    </table>
}
