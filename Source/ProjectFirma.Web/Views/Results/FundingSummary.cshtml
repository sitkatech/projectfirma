@using LtInfo.Common
@inherits ProjectFirma.Web.Views.Results.FundingSummary

<style>
    .counterSection {
        padding-bottom: 10px;
    }

    #accomplishmentsDashboard .counterHeader h4 {
        font-size: 24px;

    }
</style>
<script src="/Scripts/waypoints.min.js"></script>
<script src="/Scripts/jquery.counterup.min.js"></script>

<div class="row counterHeader">
    <div class="col-xs-12 text-center">
        <h4>Funding Totals</h4>
    </div>
</div>

<div class="row counterSection">
    <div class="col-xs-12 text-center">
        <span>$</span><span id="totalAwarded" class="counter">@ViewDataTyped.TotalAwarded.ToGroupedNumeric()</span> Awarded
    </div>
</div>
<div class="row counterSection">
    <div class="col-xs-12 text-center">
        <span>$</span><span id="totalMatched" class="counter">@ViewDataTyped.TotalMatched.ToGroupedNumeric()</span> Leveraged
    </div>
</div>
<div class="row counterSection">
    <div class="col-xs-12 text-center">
        <span>$</span><span id="totalInvestment" class="counter">@ViewDataTyped.TotalInvestment.ToGroupedNumeric()</span> Total Investment
    </div>
</div>


<div class="row">
    <div class="col-xs-12" style="margin-bottom: 20px;">
    </div>
    <div class="col-xs-12">
    </div>
    <div class="col-xs-12" style="margin-top: 20px;">
    </div>
</div>

<script>
    jQuery(document).ready(function() {
        jQuery('.counter').counterUp({
            delay: 10,
            time: 1000
        });
    });
</script>