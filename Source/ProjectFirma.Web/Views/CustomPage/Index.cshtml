@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common
@using LtInfo.Common.AgGridWrappers
@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Views.Shared.SortOrder
@inherits ProjectFirma.Web.Views.CustomPage.Index
@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}

@section RightOfPageTitle
{
    @ModalDialogFormHelper.MakeNewIconButton(ViewDataTyped.NewUrl, "Create a new Custom Page", 850, ViewDataTyped.HasCustomPageManagePermissions)
    <div class="pull-right" style="margin-left:10px">@SortOrderHelper.SortOrderModalLink(ViewDataTyped.EditSortOrderUrl, true)</div>

}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <p>Use this page to add, remove, and control the visibility of custom pages. Select a page to view its current page content. You can edit the content on the page using the Edit button that appears when you hover over content that is customizable.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            @Html.AgGrid(ViewDataTyped.GridSpec, ViewDataTyped.GridName, ViewDataTyped.GridDataUrl, "", AgGridResizeType.VerticalFillHorizontalAutoFit)
        </div>
        <div class="col-md-5">
            <h2 style="margin-top: 0">Page Content</h2>
            <div id="customPage" style="outline: 1px solid gray; padding: 10px; margin-top: 10px"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    // <![CDATA[
    jQuery(function()
    {
        var sitkaGrid = Sitka.@ViewDataTyped.GridName;
        sitkaGrid.grid.attachEvent("onRowSelect", function(id)
        {
            var firmaPageId = sitkaGrid.grid.cells(id, sitkaGrid.getColumnIndexByName("CustomPageID")).getValue();
            var dataUrlTemplate = new Sitka.UrlTemplate(@Html.Raw(ViewDataTyped.CustomPageUrl.ToJS()));
            var dataUrl = dataUrlTemplate.ParameterReplace(firmaPageId);
            SitkaAjax.load(jQuery("#customPage"), dataUrl);
        });
        sitkaGrid.grid.attachEvent("onXLE", function() { sitkaGrid.grid.selectRow(0, true); });
        sitkaGrid.grid.attachEvent("onFilterEnd", function() { sitkaGrid.grid.selectRow(0, true); });
    });
    // ]]>
</script>
