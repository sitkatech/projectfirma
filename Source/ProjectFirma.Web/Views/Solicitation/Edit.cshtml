@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Solicitation.Edit
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.SolicitationName)
            </div>
            <div class="col-xs-12 col-sm-9">
                @Html.TextBoxFor(m => m.SolicitationName, new { @class = "form-control", style = "width:100%" })
                @Html.ValidationMessageFor(m => m.SolicitationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.IsActive)
            </div>
            <div class="col-xs-12 col-sm-9">
                @Html.CheckBoxFor(m => m.IsActive)
                @Html.ValidationMessageFor(m => m.IsActive)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.AttachmentInstructions)
            </div>
            <div class="col-xs-12 col-sm-9">
                @Html.TinyMCEEditorFor(m => m.AttachmentInstructions, TinyMCEExtension.TinyMCEToolbarStyle.Minimal, true, false, 300)
                @Html.ValidationMessageFor(m => m.AttachmentInstructions)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.SolicitationID)
    
}
