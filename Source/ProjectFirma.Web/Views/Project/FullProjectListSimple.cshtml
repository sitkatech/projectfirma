@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Security
@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.Project.FullProjectListSimple

<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<table class="table table-striped table-hover table-condensed">
    <tr style="background-color: #999">     
        <th colspan="2">@Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectName.ToType())</th>
        <th>@Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectStage.ToType())</th>
        <th style="white-space: nowrap; text-align: right">@Html.LabelWithSugarFor(FieldDefinitionEnum.ImplementationStartYear.ToType())</th>
        <th style="white-space: nowrap; text-align: right">@Html.LabelWithSugarFor(FieldDefinitionEnum.CompletionYear.ToType())</th>
    </tr>
    @foreach (var project in ViewDataTyped.Projects)
    {
        <tr>
            @if (OfferProjectFactSheetLinkFeature.OfferProjectFactSheetLink(ViewDataTyped.CurrentFirmaSession, project))
            {
            <td><a href="@project.GetFactSheetUrl()">@FirmaAgGridHtmlHelpers.FactSheetIcon</a></td>
            }
            else
            {
            <td>%nbsp;</td>
            }
            <td><a href="@project.GetDetailUrl()">@project.ProjectName</a></td>
            <td style="white-space: nowrap">@project.ProjectStage.GetProjectStageDisplayName()</td>
            <td style="text-align: right">@project.ImplementationStartYear</td>
            <td style="text-align: right">@project.CompletionYear</td>
        </tr>
    }
</table>
