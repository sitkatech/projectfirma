@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.OrganizationTypeAndOrganizationRelationshipType.EditOrganizationType
              
<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
<div>
    Use this editor to control the attributes of this organization type and configure whether site maps should display a map layer 
    of organization boundaries belonging to this type. 
    Note that organization type map layers are different and independent from geospatial area map layers
</div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.OrganizationTypeName)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.OrganizationTypeName, new {@style = "width: 100%", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OrganizationTypeName)
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.OrganizationTypeAbbreviation)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.OrganizationTypeAbbreviation, new { @style = "width: auto", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OrganizationTypeAbbreviation)
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(x => x.LegendColor)
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.LegendColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.LegendColor)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.IsDefaultOrganizationType)</div>
            <div class="col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.IsDefaultOrganizationType, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.IsDefaultOrganizationType, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.IsDefaultOrganizationType)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.IsFundingType)</div>
            <div class="col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.IsFundingType, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.IsFundingType, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.IsFundingType)
            </div>
        </div>
        
        <hr/>

        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.ShowOnProjectMaps)</div>
            <div class="col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShowOnProjectMaps, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShowOnProjectMaps, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ShowOnProjectMaps)
            </div>
        </div>      
        
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.LayerOnByDefault)</div>
            <div class="col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.LayerOnByDefault, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.LayerOnByDefault, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.LayerOnByDefault)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.OrganizationTypeID)
}

<script type="text/javascript">
    jQuery(function () { jQuery("#themeColorPicker").colorpicker({format: 'hex'}); });
</script>
