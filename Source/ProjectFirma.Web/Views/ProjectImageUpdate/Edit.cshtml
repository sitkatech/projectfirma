@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Controllers
@using Microsoft.Web.Mvc
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.ProjectImageUpdate.Edit
@using (Html.BeginForm<ProjectImageUpdateController>(x => x.Edit(ViewDataTyped.ProjectImageUpdate, null), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.Caption)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(x => x.Caption, new { @class = "form-control", style = "width:100%" })
            <div class="smallExplanationText">Be concise yet still descriptive. Thumbnails above will display alphabetically by caption.</div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.Credit)</div>
        <div class="col-md-8">
            @Html.TextBoxFor(x => x.Credit, new { @class = "form-control", style = "width:100%" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.ProjectImageTimingID)</div>
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.ProjectImageTimingID, ViewDataTyped.ProjectImageTimings, new { style = "width: auto;", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ProjectImageTimingID)
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">@Html.LabelWithSugarFor(x => x.IncludeInFactSheet)</div>
        <div class="col-md-8">
            @Html.CheckBoxFor(x => x.IncludeInFactSheet)
        </div>
    </div>
}
<script>
    jQuery(function() {
        var checkbox = jQuery('#@Html.IdFor(x => x.IncludeInFactSheet)');
        if ('@ViewDataTyped.ProjectImageUpdate.IsKeyPhoto' === 'True') {
            checkbox.attr('disabled', 'disabled');
            checkbox.attr('title', 'This is the Key Photo, so it must be included in the fact sheet');
        }
    });
</script>
