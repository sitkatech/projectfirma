@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.ProjectStageCustomLabel.Edit

<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    jQuery(function() { jQuery("#stageColorPicker").colorpicker({ format: 'hex' }); });
</script>
<style>
    .defaultStageColorSwatch {
        background-color: @ViewDataTyped.ProjectStage.ProjectStageColor;
        display: inline-block;
        height: 16px;
        width: 16px;
        margin-left: 5px;
        vertical-align: middle;
    }
</style>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @* @Html.LabelFor(x => x.ProjectStageCustomLabel, new {@class = "col-sm-2 control-label"}) *@
        <div class="col-sm-2 control-label">
            @Html.LabelWithSugarFor(m => m.ProjectStageCustomLabel)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.ProjectStageCustomLabel, new {@class = "form-control"})
        </div>
        @Html.ValidationMessageFor(x => x.ProjectStageCustomLabel)
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Default Label</label>
        <div class="col-sm-10">@ViewDataTyped.ProjectStage.ProjectStageDisplayName</div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-2 control-label">
            @Html.LabelWithSugarFor(m => m.ProjectStageColor)
        </div>
        <div class="col-sm-4">
            <div id="stageColorPicker" class="input-group colorpicker-component">
                @Html.TextBoxFor(x => x.ProjectStageColor, new { @class = "form-control" })
                <span class="input-group-addon"><i></i></span>
            </div>
            @Html.ValidationMessageFor(x => x.ProjectStageColor)

        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Default Color</label>
        <div class="col-sm-4">
            @ViewDataTyped.ProjectStage.ProjectStageColor <span class="defaultStageColorSwatch"></span>
        </div>
        <div class="col-sm-1"></div>
    </div>
    @Html.HiddenFor(x => x.ProjectStageID)
</div>
}
