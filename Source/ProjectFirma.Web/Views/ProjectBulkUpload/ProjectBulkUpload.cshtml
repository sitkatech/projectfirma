@using LtInfo.Common.Mvc
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.ProjectBulkUpload.ProjectBulkUpload
@section JavascriptAndStylesContent
{

    <style>

        a.excelbutton {
            background: transparent url('/Content/img/button_icon_excel.png') no-repeat;
            padding: 0 0 0 15px;
        }

        p.instructionParagrah {
            margin-bottom: 5px;
        }

        p.instructionNumbering {
            margin-left: 20px;
            margin-bottom: 5px;
        }

        ul.instructionBullets {
            padding-left: 55px;
            margin-bottom: 5px;
        }
    </style>
}

<div class="validationError">
    @Html.ValidationSummary()
</div>

<div>
    <p class="instructionParagrah">
        To upload new Pending Projects:
        <a class="excelbutton" href="@ViewDataTyped.DownloadBulkUploadTemplateNewActivitiesUrl" title="Download Template for New Activities.">
            Download Template for New Pending Projects.
        </a>
    </p>
    <div>
        @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
    </div>
</div>
<div>
    <form method="POST" enctype="multipart/form-data">
        <div>
            @Html.EditorFor(x => x.FileResourceDatum)@Html.ValidationMessageFor(x => x.FileResourceDatum)
            <span class="smallExplanationText">
                Allowed Extensions: @Model.GetFileExtensions(x => x.FileResourceDatum)
            </span>
        </div>
        <div class="row">
            <div class="offset-8 col-4" style="text-align: right; position: relative; top: 34px; margin-bottom: 34px;">
                <button type="submit" class="btn btn-primary saveButton" title="Approve Upload" name="Approve Upload">Approve Upload</button>
            </div>
        </div>
    </form>
</div>