@using ProjectFirma.Web.Views.Shared.TextControls
@using LtInfo.Common.ModalDialog
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.ProjectUpdate.ExternalLinks

<div ng-app="ProjectFirmaApp" ng-controller="ProjectExternalLinkController">
    <div style="min-height: 230px">
        @if (!ViewDataTyped.IsEditable)
        {
            EntityExternalLinks.RenderPartialView(Html, ViewDataTyped.EntityExternalLinksViewData);
        }
        else
        {
            <script src="@Url.Content("~/Views/ProjectExternalLink/ProjectExternalLinkController.js")" type="text/javascript"></script>
            <script type="text/javascript">
                // <![CDATA[
                angular.module("ProjectFirmaApp").factory("angularModelAndViewData", function()
                {
                    return {
                        AngularModel: @Html.Raw(JObject.FromObject(Model)),
                        AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped.ViewDataForAngular))
                        };
                });
                jQuery(document).ready(function() { HookupCheckIfFormIsDirty(undefined, ".submitProject"); });
                // ]]>
            </script>

            <p class="alert">
                You may add one or more links to external web pages that further describe this project or are related to it. URLs must start with "http".
            </p>
            <hr />
            <div>
                <strong>External Link to Add:</strong><br />
                Link Text: <input type="text" ng-model="ExternalLinkLabelToAdd" style="width: 300px" />
                URL: <input type="url" ng-model="ExternalLinkUrlToAdd" style="width: 300px" />
                <button class="btn btn-xs btn-firma" type="button" ng-click="addRow()" ng-disabled="isAddButtonDisabled()">Add</button>
                <table class="dialogFormLayout">
                    <colgroup>
                        <col style="width: 20px" />
                        <col style="width: 300px" />
                        <col style="width: 300px" />
                    </colgroup>
                    <tr>
                        <th></th>
                        <th>Link Text</th>
                        <th>URL</th>
                    </tr>
                    <tr ng-repeat="projectExternalLink in AngularModel.ProjectExternalLinks | orderBy:['ExternalLinkLabel']">
                        <td>
                            <span class="glyphicon glyphicon-trash blue" title="Remove row'" alt="Remove row" ng-click="deleteRow(projectExternalLink)" style="cursor: pointer"></span>
                        </td>
                        <td ng-bind="projectExternalLink.ExternalLinkLabel"></td>
                        <td><a href="{{projectExternalLink.ExternalLinkUrl}}" ng-bind="projectExternalLink.ExternalLinkUrl"></a></td>
                    </tr>
                </table>
            </div>
        }
    </div>
    <hr />
    <table class="summaryLayout" style="width: 100%">
        <tr>
            <td>
                @ModalDialogFormHelper.ModalDialogFormLink("Refresh", ViewDataTyped.RefreshUrl, "Refresh this section", 500, "Continue", "Cancel", new List<string> { "btn btn-xs btn-firma" }, null, null)
                @if (ViewDataTyped.UpdateStatus.IsExternalLinksUpdated)
                {
                    @ModalDialogFormHelper.ModalDialogFormLink("diff-link-id", "Show Changes", ViewDataTyped.DiffUrl, string.Format("Changes to {0} {1}", FieldDefinition.Project.GetFieldDefinitionLabel(), FieldDefinition.ExternalLinks.GetFieldDefinitionLabelPluralized()), 800, "hidden-save-button", string.Empty, "diff-close-button", "Close", new List<string> { "btn btn-xs btn-firma" }, null, null, null, new List<string>() {"btn-firma", "btn-xs"})
                }
            </td>
            <td style="text-align: right; white-space: nowrap">
                @using (Html.BeginForm())
                {
                    <button type="submit" class="btn btn-xs btn-firma" value="false" name="@Html.NameFor(x => x.AutoAdvance)">Save</button>
                    <button type="submit" class="btn btn-xs btn-firma" value="true" name="@Html.NameFor(x => x.AutoAdvance)">Save &amp; Continue</button>
                    <input ng-repeat="projectExternalLink in AngularModel.ProjectExternalLinks" type="hidden" name="@Html.NameFor(x => x.ProjectExternalLinks[0].ProjectID).ToString().Replace("0", "{{$index}}")" value="{{projectExternalLink.ProjectID}}">
                    <input ng-repeat="projectExternalLink in AngularModel.ProjectExternalLinks" type="hidden" name="@Html.NameFor(x => x.ProjectExternalLinks[0].ExternalLinkLabel).ToString().Replace("0", "{{$index}}")" value="{{projectExternalLink.ExternalLinkLabel}}">
                    <input ng-repeat="projectExternalLink in AngularModel.ProjectExternalLinks" type="hidden" name="@Html.NameFor(x => x.ProjectExternalLinks[0].ExternalLinkUrl).ToString().Replace("0", "{{$index}}")" value="{{projectExternalLink.ExternalLinkUrl}}">
                }
            </td>
        </tr>
    </table>
</div>
