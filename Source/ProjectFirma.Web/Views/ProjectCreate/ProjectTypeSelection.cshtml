@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.ProjectCreate
@using ProjectFirmaModels.Models
@inherits ProjectTypeSelection

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div>
        Do you want to:
    </div>
    <div class="form-group">
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.CreateType, ProjectTypeSelectionViewModel.ProjectCreateType.Proposal)
                <strong>Add a @FieldDefinitionEnum.Proposal.ToType().GetFieldDefinitionLabel() for a future @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()</strong>
            </label>
            <div class="radioExplanationText">This will create a new @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() in @ProjectStage.Proposal.GetProjectStageDisplayName() stage. When a @FieldDefinitionEnum.Proposal.ToType().GetFieldDefinitionLabel() is reviewed and selected for implementation an administrator can advance the @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() to the @ProjectStage.PlanningDesign.GetProjectStageDisplayName() stage.</div>
        </div>
        <div class="radio" style="margin-top: 10px;">
            <label>
                @Html.RadioButtonFor(m => m.CreateType, ProjectTypeSelectionViewModel.ProjectCreateType.Existing)
                <strong>Enter an existing @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() that is already underway or complete</strong>
            </label>
            <div class="radioExplanationText">This will create a new @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() record for an existing @(FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()). You will be asked to select the @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() stage (e.g. @ProjectStage.PlanningDesign.GetProjectStageDisplayName(), @ProjectStage.Implementation.GetProjectStageDisplayName(), or @ProjectStage.Completed.GetProjectStageDisplayName()). An administrator will review the @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() before it becomes publicly visible.</div>
        </div>
        @if (ViewDataTyped.TenantAttribute.ProjectExternalDataSourceEnabled)
        {
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.CreateType, ProjectTypeSelectionViewModel.ProjectCreateType.ImportExternal)
                    <strong>Import @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() from an external data source (Proof of Concept)</strong>
                </label>
                <div class="radioExplanationText">This will import a @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() from another @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() tracking system using a URL for the external system API.</div>
            </div>
        }
    </div>
}
