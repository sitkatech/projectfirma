@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.TaxonomyTrunk.Edit

<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTrunkName)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.TaxonomyTrunkName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TaxonomyTrunkName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.TaxonomyTrunkDescription)</div>
            <div class="col-sm-9">
                @Html.TinyMCEEditorFor(m => m.TaxonomyTrunkDescription, TinyMCEExtension.TinyMCEToolbarStyle.Minimal, true, true, 300)
                @Html.ValidationMessageFor(m => m.TaxonomyTrunkDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(x => x.ThemeColor)
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.ThemeColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.ThemeColor)
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.TaxonomyTrunkID)
}

<script type="text/javascript">
    jQuery(function() { jQuery("#themeColorPicker").colorpicker(); });
</script>

