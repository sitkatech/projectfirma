@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views.Shared
@using ProjectFirma.Web.Views.Shared.ProjectControls
@using ProjectFirma.Web.Views.Shared.ProjectLocationControls
@using ProjectFirma.Web.Views
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.ModalDialog
@using MoreLinq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared.SortOrder
@using ProjectFirma.Web.Views.PerformanceMeasure
@inherits ProjectFirma.Web.Views.TaxonomyTrunk.Detail

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
    
    <link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

    <style>
        #@ViewDataTyped.ProjectLocationsMapInitJson.MapDivID
        {
            height: 420px;
        }
    </style>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all @ViewDataTyped.TaxonomyTrunkDisplayNamePluralized.</a>
</div>

<div class="row">
    <div class="col-md-@(ViewDataTyped.CanHaveAssociatedPerformanceMeasures && ViewDataTyped.PerformanceMeasureChartViewDatas.Any() ? 6 : 12)">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditTaxonomyTrunkUrl, string.Format("Edit {0} - {1}", ViewDataTyped.TaxonomyTrunkDisplayName, ViewDataTyped.TaxonomyTrunk.GetDisplayName()), ViewDataTyped.UserHasTaxonomyTrunkManagePermissions) Basics
                </h2>
            </div>
            <div class="panel-body">
                <div>
                    @{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }
                </div>
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>@Html.LabelWithSugarFor(FieldDefinitionEnum.TaxonomyTrunkDescription.ToType())</h2>
            </div>
            <div class="panel-body">
                <div>
                    @ViewDataTyped.TaxonomyTrunk.TaxonomyTrunkDescriptionHtmlString
                </div>
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>@ViewDataTyped.TaxonomyTrunkDisplayName @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized() Map</h2>
            </div>
            <div style="padding: 10px">
                To zoom, hold down Shift and drag a rectangle.
                <div style="border-radius: 8px; background-color: white; margin: 5px 0 5px 0">
                    @{ ProjectLocationsMap.RenderPartialView(Html, ViewDataTyped.ProjectLocationsMapViewData); }
                </div>
                Some @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized() operate over larger areas and are not represented on the map, but are listed in the @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() grid below. A <a href="@ViewDataTyped.ProjectMapFilteredUrl">full-screen, filterable version of this map</a> is also available.
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    <a href="@ViewDataTyped.TaxonomyBranchIndexUrl">@ViewDataTyped.TaxonomyBranchDisplayNamePluralized</a>
                </h2>
            </div>
            <div class="panel-body">
                @if (ViewDataTyped.TaxonomyTrunk.TaxonomyBranches.Any())
                {
                    <div class="pull-right">@SortOrderHelper.SortOrderModalLink(ViewDataTyped.EditChildrenSortOrderUrl, ViewDataTyped.UserHasTaxonomyTrunkManagePermissions)</div>

                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithSugarFor(FieldDefinitionEnum.TaxonomyBranch.ToType(), LabelWithSugarForExtensions.DisplayStyle.HelpIconWithLabel)</th>
                        </tr>
                        @foreach (var taxonomyBranch in ViewDataTyped.TaxonomyTrunk.TaxonomyBranches.SortByOrderThenName())
                        {
                            <tr>
                                <td>
                                    @taxonomyBranch.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No @ViewDataTyped.TaxonomyBranchDisplayNamePluralized set for this @ViewDataTyped.TaxonomyTrunkDisplayName.</p>
                }
            </div>
        </div>

        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    <a href="@ViewDataTyped.IndexUrl">@ViewDataTyped.TaxonomyLeafDisplayNamePluralized</a>
                </h2>
            </div>
            <div class="panel-body">
                @if (ViewDataTyped.TaxonomyTrunk.GetTaxonomyLeafs().Any())
                {
                    <table class="summaryLayout">
                        <tr>
                            <th>@Html.LabelWithSugarFor(FieldDefinitionEnum.TaxonomyLeaf.ToType(), LabelWithSugarForExtensions.DisplayStyle.HelpIconWithLabel)</th>
                        </tr>
                        @foreach (var taxonomyLeaf in ViewDataTyped.TaxonomyTrunk.GetTaxonomyLeafs().SortByOrderThenName())
                        {
                            <tr>
                                <td>
                                    @taxonomyLeaf.GetDisplayNameAsUrl()
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No @ViewDataTyped.TaxonomyLeafDisplayNamePluralized set for this @ViewDataTyped.TaxonomyTrunkDisplayName.</p>
                }
            </div>
        </div>
        @{ RelatedPerformanceMeasures.RenderPartialView(Html, ViewDataTyped.RelatedPerformanceMeasuresViewData); }
    </div>

    @if (ViewDataTyped.CanHaveAssociatedPerformanceMeasures && ViewDataTyped.PerformanceMeasureChartViewDatas.Any())
    {
        <div class="col-md-6">
            @foreach (var batch in ViewDataTyped.PerformanceMeasureChartViewDatas.Batch(3))
            {
                <div class="row">
                    @foreach (var performanceMeasureChartViewData in batch)
                    {
                        <div class="col-md-4" style="width: 500px">
                            <div class="panel panelFirma">
                                <div class="panel-body">
                                    @{ PerformanceMeasureChart.RenderPartialView(Html, performanceMeasureChartViewData); }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>
            <a href="@ViewDataTyped.FullProjectListUrl">@FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized()</a>
        </h2>
    </div>
    <div class="panel-body">
        @Html.DhtmlxGrid(ViewDataTyped.ProjectCustomDefaultGridSpec, ViewDataTyped.ProjectCustomDefaultGridName, ViewDataTyped.ProjectCustomDefaultGridDataUrl, "height:300px", DhtmlxGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function()
    {
        var projectLocationsMapInitJson = @Html.Raw(JObject.FromObject(ViewDataTyped.ProjectLocationsMapInitJson).ToString(Formatting.None));
        var map = new ProjectFirmaMaps.Map(projectLocationsMapInitJson);
        map.initializeProjectLocations(projectLocationsMapInitJson);
    })
</script>
