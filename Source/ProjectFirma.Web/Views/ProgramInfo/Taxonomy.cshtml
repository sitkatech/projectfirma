@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.ProgramInfo.Taxonomy
@section JavascriptAndStylesContent
{
    <script src="~/ScriptsCustom/AAColors.js"></script>
    @*<link rel="stylesheet" href="/Content/fancytree/skin-bootstrap/ui.fancytree.min.css" type="text/css" />*@

    <style>
        table.taxonomy-treegrid {
            border: 5px solid;
            border-radius: 12px;
            width: 100%;
        }
        table.taxonomy-treegrid thead {
            background: #f5f5f5;
        }
        table.taxonomy-treegrid th, table.taxonomy-treegrid td {
            padding: 1px 5px;
            border-top: 1px dotted #bbb;
        }
        table.taxonomy-treegrid th {
            font-weight: bold;
        }
        table.taxonomy-treegrid tr:first-child td {
            border-top: 0 none;
        }
        .treegrid-expander {
            cursor: pointer;
            margin-right: 6px;
            font-weight: bold;
            font-size: 18px;
            user-select: none;
        }
        .treegrid-collapsed > .treegrid-expander::before {
            content: '+';
        }
        .treegrid-expanded > .treegrid-expander::before {
            content: '\2212'; /* minus sign */
        }
        .treegrid-leaf > .treegrid-expander {
            visibility: hidden;
        }
        .map-link:focus {
            outline: 3px solid #1976d2;
            outline-offset: 2px;
            box-shadow: 0 0 0 2px #90caf9;
            background-color: #1565c0 !important;
        }
    </style>
}

<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <input id="taxonomySearch" name="search" placeholder="Search..." autocomplete="on">
        <button id="btnResetSearch" class="btn btn-xs btn-primary">&times;</button>
        <span id="matches"></span>
    </div>
    <div style="padding: 0 15px;">
        <div class="pull-left" style="font-weight: bold">
            @if (ViewDataTyped.TaxonomyLevel == TaxonomyLevel.Trunk)
            {
                @ViewDataTyped.TaxonomyTrunkDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
                @ViewDataTyped.TaxonomyBranchDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            }
            @if (ViewDataTyped.TaxonomyLevel == TaxonomyLevel.Branch)
            {
                @ViewDataTyped.TaxonomyBranchDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            }
            @ViewDataTyped.TaxonomyLeafDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()
        </div>
        <div class="pull-right" style="font-weight: bold">
            Number of @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized()
        </div>
        <div style="clear: both">
            <table id="taxonomyTreeGrid" class="taxonomy-treegrid" role="treegrid" aria-label="Taxonomy Treegrid" style="margin-bottom: 10px; border-color: #888;">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Map</th>
                        <th># Projects</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Example: you may need to adjust this to match your actual data structure
    var taxonomyData = @Html.Raw(JArray.FromObject(ViewDataTyped.TopLevelTaxonomyTierAsFancyTreeNodes));

    function renderTreeGridRow(node, level, parentKey) {
        var hasChildren = node.children && node.children.length > 0;
        var isLeaf = !hasChildren;
        var rowId = 'row-' + node.key;
        var parentAttr = parentKey ? `data-parent="row-${parentKey}"` : '';
        var expanderClass = isLeaf ? 'treegrid-leaf' : 'treegrid-collapsed';
        var expander = `<span class="treegrid-expander"></span>`;
        var indent = `<span style="display:inline-block;width:${level * 24}px"></span>`;
        var titleCell = `<td style="border-top-color:${node.ThemeColor}" ${parentAttr} data-key="${node.key}" class="${expanderClass}">${indent}${expander}<h2 style="display:inline">${node.title}</h2></td>`;
        var mapCell = `<td style="border-top-color:${node.ThemeColor}">`;
        if (node.MapUrl) {
            mapCell += `<a href="${node.MapUrl}" tabindex="0" aria-label="Map" class="btn btn-sm map-link" style="color:white; text-decoration:none; background-color:${node.ThemeColor}">Map <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></a>`;
        }
        mapCell += `</td>`;
        var countCell = `<td style="border-top-color:${node.ThemeColor}">${node.NumberOfProjects != null ? node.NumberOfProjects : ''}</td>`;
        var row = `<tr id="${rowId}" role="row" aria-level="${level + 1}" aria-expanded="false">${titleCell}${mapCell}${countCell}</tr>`;
        var rows = [row];
        if (hasChildren) {
            for (var i = 0; i < node.children.length; ++i) {
                rows = rows.concat(renderTreeGridRow(node.children[i], level + 1, node.key));
            }
        }
        return rows;
    }

    function renderTreeGrid() {
        var rows = [];
        for (var i = 0; i < taxonomyData.length; ++i) {
            rows = rows.concat(renderTreeGridRow(taxonomyData[i], 0, null));
        }
        $('#taxonomyTreeGrid tbody').html(rows.join(''));
    }

    function updateExpandCollapse() {
        // Set up expand/collapse logic
        $('#taxonomyTreeGrid').off('click', '.treegrid-expander').on('click', '.treegrid-expander', function (e) {
            var $row = $(this).closest('tr');
            var key = $row.find('[data-key]').data('key');
            var expanded = $row.attr('aria-expanded') === 'true';
            $row.attr('aria-expanded', !expanded);
            $row.toggleClass('treegrid-expanded', !expanded).toggleClass('treegrid-collapsed', expanded);
            // Show/hide children
            toggleChildren(key, !expanded);
            e.stopPropagation();
        });
    }

    function toggleChildren(parentKey, show) {
        var $children = $(`#taxonomyTreeGrid td[data-parent='row-${parentKey}']`).closest('tr');
        $children.each(function () {
            if (show) {
                $(this).show();
            } else {
                $(this).hide();
                // Also collapse all descendants
                var childKey = $(this).find('[data-key]').data('key');
                toggleChildren(childKey, false);
                $(this).attr('aria-expanded', false).removeClass('treegrid-expanded').addClass('treegrid-collapsed');
            }
        });
    }

    function collapseAll() {
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var key = $row.find('[data-key]').data('key');
            if ($row.find('.treegrid-expander').length) {
                $row.attr('aria-expanded', false).removeClass('treegrid-expanded').addClass('treegrid-collapsed');
                toggleChildren(key, false);
            }
        });
    }
    function expandAll() {
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var key = $row.find('[data-key]').data('key');
            if ($row.find('.treegrid-expander').length) {
                $row.attr('aria-expanded', true).removeClass('treegrid-collapsed').addClass('treegrid-expanded');
                toggleChildren(key, true);
            }
        });
    }

    function filterTreeGrid(query) {
        query = query.trim().toLowerCase();
        var matchCount = 0;
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var text = $row.text().toLowerCase();
            if (query === '' || text.indexOf(query) !== -1) {
                $row.show();
                matchCount++;
            } else {
                $row.hide();
            }
        });
        $('#matches').text('(' + matchCount + ' matches)');
    }

    $(function () {
        renderTreeGrid();
        updateExpandCollapse();
        expandAll();
        $('#btnExpandLevel').on('click', expandAll);
        $('#btnCollapseLevel').on('click', collapseAll);
        $('#taxonomySearch').on('keyup', function () {
            filterTreeGrid($(this).val());
        });
        $('#btnResetSearch').on('click', function () {
            $('#taxonomySearch').val('');
            filterTreeGrid('');
        });
    });
</script>
