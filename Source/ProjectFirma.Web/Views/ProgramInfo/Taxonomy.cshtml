@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.ProgramInfo.Taxonomy
@section JavascriptAndStylesContent
{
    <script src="~/ScriptsCustom/AAColors.js"></script>
    <style>
        table.taxonomy-treegrid {
            width: 100%;
            font-size: 16px;
            /* border and border-radius removed */
        }
        table.taxonomy-treegrid thead {
            background: #f5f5f5;
        }
        table.taxonomy-treegrid th, table.taxonomy-treegrid td {
            padding: 1px 5px;
            border-top: 1px dotted #bbb;
        }
        table.taxonomy-treegrid th {
            font-weight: bold;
        }
        table.taxonomy-treegrid tr:first-child td {
            border-top: 0 none;
        }
        .taxonomy-trunk-group {
            border: 2px solid #888;
            border-radius: 20px;
            margin-bottom: 24px;
            background: #fff;
            overflow: hidden;
            padding-bottom: 1rem;
            margin-top: 8px;
        }
        .treegrid-expander {
            cursor: pointer;
            margin-right: 6px;
            font-weight: bold;
            font-size: 18px;
            user-select: none;
        }
        .taxonomy-treegrid tr.treegrid-collapsed .treegrid-expander::before {
            content: '\25B6'; /* right-pointing chevron ▶ */
        }
        .taxonomy-treegrid tr.treegrid-expanded .treegrid-expander::before {
            content: '\25BC'; /* down-pointing chevron ▼ */
        }
        .treegrid-leaf > .treegrid-expander {
            visibility: hidden;
        }
        .taxonomy-level-tag {
            display: inline-block;
            color: #fff;
            border-radius: 20px;
            font-size: 12px;
            padding: 2px 8px;
            margin-right: 8px;
            font-weight: bold;
            vertical-align: middle;
        }
        .map-link:focus {
            outline: 3px solid #1976d2;
            outline-offset: 2px;
            box-shadow: 0 0 0 2px #90caf9;
            background-color: #1565c0 !important;
        }
    </style>
}

<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <input id="taxonomySearch" name="search" placeholder="Search..." autocomplete="on">
        <button id="btnResetSearch" class="btn btn-xs btn-primary">&times;</button>
        <span id="matches"></span>
    </div>
    <div style="padding: 0 15px;">
        <div class="pull-left" style="font-weight: bold">
            @if (ViewDataTyped.TaxonomyLevel == TaxonomyLevel.Trunk)
            {
                @ViewDataTyped.TaxonomyTrunkDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
                @ViewDataTyped.TaxonomyBranchDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            }
            @if (ViewDataTyped.TaxonomyLevel == TaxonomyLevel.Branch)
            {
                @ViewDataTyped.TaxonomyBranchDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            }
            @ViewDataTyped.TaxonomyLeafDisplayName <span class='glyphicon glyphicon-chevron-right'></span>
            @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()
        </div>
        <div class="pull-right" style="font-weight: bold">
            Number of @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized()
        </div>
        <div style="clear: both">
            <table id="taxonomyTreeGrid" class="taxonomy-treegrid" role="treegrid" aria-label="Taxonomy Treegrid" style="margin-bottom: 10px;">
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    var taxonomyData = @Html.Raw(JArray.FromObject(ViewDataTyped.TopLevelTaxonomyTierAsFancyTreeNodes));
    var taxonomyLevelDisplayNames = {
        trunk: '@ViewDataTyped.TaxonomyBranchDisplayName',
        branch: '@ViewDataTyped.TaxonomyLeafDisplayName',
        leaf: '@FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()'
    };

    function getTaxonomyLevelDisplayName(node, level) {
        if (level === 0) return taxonomyLevelDisplayNames.trunk;
        if (level === 1) return taxonomyLevelDisplayNames.branch;
        if (level === 2) return taxonomyLevelDisplayNames.leaf;
        return 'Level ' + (level + 1);
    }

    function renderTreeGridRow(node, level, parentKey, expanded, colors) {
        var hasChildren = node.children && node.children.length > 0;
        var isLeaf = !hasChildren;
        var rowId = 'row-' + node.key;
        var parentAttr = parentKey ? `data-parent="row-${parentKey}"` : '';
        var isExpanded = expanded;
        var expanderClass = isLeaf ? 'treegrid-leaf' : (isExpanded ? 'treegrid-expanded' : 'treegrid-collapsed');
        var ariaExpanded = isLeaf ? '' : `aria-expanded="${isExpanded}"`;
        var tag = `<span class="taxonomy-level-tag" style="background:${colors.accentStrong}; color:${colors.tagText};">${getTaxonomyLevelDisplayName(node, level)}</span>`;
        var expander = `<span class="treegrid-expander"></span>`;
        var indent = `<span style="display:inline-block;width:${level * 24}px"></span>`;
        var titleCell = `<td style="border-top-color:${colors.accent}" ${parentAttr} data-key="${node.key}" class="${expanderClass}" ${ariaExpanded}>${indent}${expander}${tag}<div style="display:inline">${node.title}</div></td>`;
        var countCell = `<td style="border-top-color:${colors.accent}"><span class="taxonomy-level-tag" style="background:${colors.accentStrong};color:${colors.tagText};">${node.NumberOfProjects != null ? node.NumberOfProjects : ''}</span></td>`;
        var row = `<tr id="${rowId}" role="row" aria-level="${level + 1}" class="${expanderClass}" ${ariaExpanded}>${titleCell}${countCell}</tr>`;
        var rows = [row];
        if (hasChildren) {
            for (var i = 0; i < node.children.length; ++i) {
                rows = rows.concat(renderTreeGridRow(node.children[i], level + 1, node.key, isExpanded, colors));
            }
        }
        return rows;
    }

    function renderTreeGrid() {
        var trunkGroups = [];
        for (var i = 0; i < taxonomyData.length; ++i) {
            var trunk = taxonomyData[i];
            var trunkColors = deriveTokens(trunk.ThemeColor || '#888');
            var trunkRows = renderTreeGridRow(trunk, 0, null, true, trunkColors).join(''); // Start expanded
            var trunkColor = trunk.ThemeColor || '#888';
            trunkGroups.push(
                `<tr><td colspan="2" style="padding:0; border:none; background:none;">
                    <div class="taxonomy-trunk-group" style="border:2px solid ${trunkColor};border-radius:20px;margin-bottom:24px;background:#fff;overflow:hidden;padding-bottom:1rem;">
                        <table style="width:100%;border:none;background:none;margin:0;">
                            <tbody>${trunkRows}</tbody>
                        </table>
                    </div>
                </td></tr>`
            );
        }
        $('#taxonomyTreeGrid').html(trunkGroups.join(''));
    }

    function updateExpandCollapse() {
        $('#taxonomyTreeGrid').off('click', '.treegrid-expander').on('click', '.treegrid-expander', function (e) {
            var $row = $(this).closest('tr');
            var key = $row.find('[data-key]').data('key');
            var expanded = $row.hasClass('treegrid-expanded');
            $row.toggleClass('treegrid-expanded', !expanded).toggleClass('treegrid-collapsed', expanded);
            $row.attr('aria-expanded', !expanded);
            toggleChildren(key, !expanded);
            e.stopPropagation();
        });
    }

    function toggleChildren(parentKey, show) {
        var $children = $(`#taxonomyTreeGrid td[data-parent='row-${parentKey}']`).closest('tr');
        $children.each(function () {
            if (show) {
                $(this).show();
            } else {
                $(this).hide();
                var childKey = $(this).find('[data-key]').data('key');
                toggleChildren(childKey, false);
                $(this).attr('aria-expanded', false).removeClass('treegrid-expanded').addClass('treegrid-collapsed');
            }
        });
    }

    function collapseAll() {
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var key = $row.find('[data-key]').data('key');
            if ($row.find('.treegrid-expander').length) {
                $row.attr('aria-expanded', false).removeClass('treegrid-expanded').addClass('treegrid-collapsed');
                toggleChildren(key, false);
            }
        });
    }
    function expandAll() {
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var key = $row.find('[data-key]').data('key');
            if ($row.find('.treegrid-expander').length) {
                $row.attr('aria-expanded', true).removeClass('treegrid-collapsed').addClass('treegrid-expanded');
                toggleChildren(key, true);
            }
        });
    }

    function filterTreeGrid(query) {
        query = query.trim().toLowerCase();
        var matchCount = 0;
        $('#taxonomyTreeGrid tbody tr').each(function () {
            var $row = $(this);
            var text = $row.text().toLowerCase();
            if (query === '' || text.indexOf(query) !== -1) {
                $row.show();
                matchCount++;
            } else {
                $row.hide();
            }
        });
        $('#matches').text('(' + matchCount + ' matches)');
    }

    $(function () {
        renderTreeGrid();
        updateExpandCollapse();
        expandAll();
        $('#btnExpandLevel').on('click', expandAll);
        $('#btnCollapseLevel').on('click', collapseAll);
        $('#taxonomySearch').on('keyup', function () {
            filterTreeGrid($(this).val());
        });
        $('#btnResetSearch').on('click', function () {
            $('#taxonomySearch').val('');
            filterTreeGrid('');
        });
    });
</script>
