@using LtInfo.Common.HtmlHelperExtensions
@inherits ProjectFirma.Web.Views.OrganizationAndRelationshipType.EditOrganizationType
              
<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.OrganizationTypeName)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.OrganizationTypeName)
                @Html.ValidationMessageFor(m => m.OrganizationTypeName)
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.OrganizationTypeAbbreviation)</div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.OrganizationTypeAbbreviation)
                @Html.ValidationMessageFor(m => m.OrganizationTypeAbbreviation)
            </div>
        </div>        
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(x => x.LegendColor, "Legend Color")
            </div>
            <div class="col-sm-9">
                <div id="themeColorPicker" class="input-group colorpicker-component">
                    @Html.TextBoxFor(x => x.LegendColor, new { @class = "form-control" })
                    <span class="input-group-addon"><i></i></span>
                    @Html.ValidationMessageFor(x => x.LegendColor)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">@Html.LabelWithSugarFor(m => m.ShowOnProjectMaps)</div>
            <div class="col-sm-9">
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShowOnProjectMaps, true) Yes
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        @Html.RadioButtonFor(m => m.ShowOnProjectMaps, false) No
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.ShowOnProjectMaps)
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.OrganizationTypeID)
}

<script type="text/javascript">
    jQuery(document).ready(function () { jQuery("#themeColorPicker").colorpicker({format: 'hex'}); });
</script>
