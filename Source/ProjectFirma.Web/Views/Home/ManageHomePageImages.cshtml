@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.Home.ManageHomePageImages

@section JavascriptAndStylesContent
{
    <meta name="Description" content="ProjectFirma provides public access to program information and details on geospatialArea, habitat, stormwater, forestry, air quality, and projects implemented by ProjectFirma partners." />

    @{ MapJavascriptIncludes.RenderPartialView(Html); }
}

<h2 data-toc-skip class="sectionHeader">Photos</h2>
<div class="summarySection">
    <h2>Home Page Images</h2>
    <p>
        Upload images you would like to see on the home page. For best display, select images with the focal points centered as the top and bottom are often cropped in the browser.
        You should then check how these images display on various screens, such as desktop monitors, mobile phones, and tablets.
    </p>
    <div class="contentWrapper">
        @{
            ImageGallery.RenderPartialView(Html, ViewDataTyped.ImageGalleryViewData);
        }
    </div>
</div>
