@using LtInfo.Common.BootstrapWrappers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views.Shared
@using ProjectFirmaModels.Models
@inherits ProjectFirma.Web.Views.Home.TrainingVideo

@section RightOfPageTitle
{
    @if (ViewDataTyped.UserHasAdminPermissions)
    {
        <a class="btn btn-firma" href="@ViewDataTyped.ManageTrainingVideosUrl" title="Manage Training Videos">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-edit") Manage Training Videos</a>
    }
}

<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

<div class="row">
    <h2>Videos</h2>
    @foreach (var video in ViewDataTyped.TrainingVideos)
    {
        <div class="col-md-6" style="margin-bottom: 20px;">
            <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;"><strong>@video.VideoName</strong></div>
            <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px">
                <iframe title="@video.VideoName" src="@video.VideoURL" allowfullscreen="" width="100%" height="344" frameborder="0"></iframe>
                <p>@Html.Raw(video.VideoDescription) </p>
                <p>Uploaded on @video.VideoUploadDate.ToShortDateString()</p>
            </div>
        </div>
    }
</div>
<div class="row">
    <h3>Documents</h3>
    <div class="col-md-4" style="margin-bottom: 20px;">
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;"><strong>ProjectFirma Customization Guide</strong></div>
        @* 12/02/2019 SMG - Displaying the document here like this for now to stay within budget, this should be changed to something in the future that is more robust ProjectFirma/#1934 *@
        
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;">
            <a href="/Content/Training/ProjectFirma_CustomizationGuide_2021.pdf" target="_blank">
                <img src="/Content/Training/projectfirma-customization-guide.jpg" class="img-responsive" alt="Training Document" style="margin-bottom: 5px;" />
                <p>View/Download the ProjectFirma Customization Guide</p>
            </a>
        </div>
    </div>
    <div class="col-md-4" style="margin-bottom: 20px;">
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;"><strong>ProjectFirma Administrator Quick Guide</strong></div>
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;">
            <a href="/Content/Training/ProjectFirma_AdministratorQuickGuide_2020.pdf" target="_blank">
                <img src="/Content/Training/projectfirma-administrator-quick-guide.jpg" class="img-responsive" alt="Quick Guide Document" style="margin-bottom: 5px;" />
                <p>View/Download the ProjectFirma Administrator Quick Guide</p>
            </a>
        </div>
    </div>
    <div class="col-md-4" style="margin-bottom: 20px;">
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;"><strong>Connecting to ProjectFirma Geospatial Services with Desktop GIS</strong></div>
        <div style="background: #eee; border: 1px solid #ccc; padding: 5px 10px;">
            <a href="/Content/Training/ProjectFirmaTrainingDocument_DesktopGIS_WEB_2025.pdf" target="_blank">
                <img src="/Content/Training/training-desktopGIS.jpg" class="img-responsive" alt="Connecting to ProjectFirma Geospatial Services with Desktop GIS Document" style="margin-bottom: 5px;" />
                <p>View/Download the Connecting to ProjectFirma Geospatial Services with Desktop GIS document</p>
            </a>
        </div>
    </div>

</div>