@using System.Web.Mvc.Html
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.ProjectStatus.Edit

<link href="@Url.Content("~/Content/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    jQuery(document).ready(function () { jQuery("#themeColorPicker").colorpicker({ format: 'hex' }); });
</script>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ProjectStatusID)
    <div class="row">
        <div class="col-xs-12">
            <div class="validationError">
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        @Html.LabelWithSugarFor(m => m.ProjectStatusName)
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.ProjectStatusName, new {@class = "form-control", style = "width:100%"})
                        @Html.ValidationMessageFor(m => m.ProjectStatusName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        @Html.LabelWithSugarFor(m => m.ProjectStatusDescription)
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.ProjectStatusDescription, new {@class = "form-control", style = "width:100%"})
                        @Html.ValidationMessageFor(m => m.ProjectStatusDescription)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        @Html.LabelWithSugarFor(m => m.ProjectStatusDisplayName)
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.ProjectStatusDisplayName, new {@class = "form-control", style = "width:100%"})
                        @Html.ValidationMessageFor(m => m.ProjectStatusDisplayName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        @Html.LabelWithSugarFor(m => m.ProjectStatusColor)
                    </div>
                    
                    <div class="col-sm-4">
                        <div id="themeColorPicker" class="input-group colorpicker-component">
                            @Html.TextBoxFor(x => x.ProjectStatusColor, new { @class = "form-control" })
                            <span class="input-group-addon"><i></i></span>
                            @Html.ValidationMessageFor(x => x.ProjectStatusColor)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}