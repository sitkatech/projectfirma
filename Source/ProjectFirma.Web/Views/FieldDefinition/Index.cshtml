    </p>
    @Html.DhtmlxGrid(ViewDataTyped.ProjectStageGridSpec, ViewDataTyped.ProjectStageGridName, ViewDataTyped.ProjectStageGridDataUrl, "", DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)

</div>