@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.AgGridWrappers
@using LtInfo.Common.ModalDialog
@inherits ProjectFirma.Web.Views.Reports.Index
@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}
@section RightOfPageTitle
{
    @ModalDialogFormHelper.MakeNewIconButton(ViewDataTyped.NewUrl, "Create a new Report Template", ViewDataTyped.HasManageReportTemplatePermissions)
}
<div>
    @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
</div>

@Html.AgGrid(ViewDataTyped.GridSpec, ViewDataTyped.GridName, ViewDataTyped.GridDataUrl, "", AgGridResizeType.VerticalFillHorizontalAutoFit)

<div class="reports-files" style="margin-top: 30px;">
    <h3>Documentation</h3>
    <table class="table table-firma">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Link</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Report Center User Guide</td>
            <td>The Report Center User Guide contains documentation on the general functionality of the Report Center. Use this to get started building your own templates. Contains examples of code that can be used in templates.</td>
            <td><a href="/Content/Training/ProjectFirma-Reports-User-Guide.pdf">User Guide</a></td>
        </tr>
        <tr>
            <td>Model Documentation</td>
            <td>This Model Documentation has detailed documentation on the "Models" that can be accessed with the Report Center. Contains detailed examples of the attributes that can be accessed in your report templates.</td>
            <td><a href="/Content/Training/ProjectFirma-Reports-Model-Documentation.xlsx">Model Documentation</a></td>
        </tr>
        <tr>
            <td>Example Report</td>
            <td>The Example Report is a functional report template that can help you get started with building your own report templates.</td>
            <td><a href="/Content/Training/ProjectFirma-Reports-Example-Report.docx">Example Report</a></td>
        </tr>
        </tbody>
    </table>
</div>